<h1>Add course</h1>

<form action="/add" method="post">
    <div class="input-field col s6">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Write name"></span>
    </div>
    <div class="input-field col s6">
        <input id="price" name='price' type="text" class="validate" required>
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Write price"></span>
    </div>
    <div class="input-field col s6">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">Course image</label>
        <span class="helper-text" data-error="Add image"></span>
    </div>

    <button class="btn btn-primary" type="submit">Add course</button>
</form>